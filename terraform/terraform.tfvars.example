# ============================================
# Copy That API - Terraform Configuration
# ============================================
# Copy this file to terraform.tfvars and fill in your values

project_id = "copy-that-platform"
region     = "us-central1"
environment = "prod"

# ============================================
# Cloud Run Configuration
# ============================================
service_name           = "copy-that-api"
image_tag              = "latest"
cloud_run_memory       = "512"
cloud_run_cpu          = "1"
cloud_run_timeout      = 300
cloud_run_max_instances = 10
cloud_run_min_instances = 0

# ============================================
# Secrets (DO NOT COMMIT terraform.tfvars)
# ============================================

# Get your Neon connection string from: https://console.neon.tech
# Format: postgresql://user:password@host.neon.tech/dbname?sslmode=require
database_url = "postgresql://user:password@ep-xyz.neon.tech/copy_that?sslmode=require"

# Get your Anthropic API key from: https://console.anthropic.com
anthropic_api_key = "sk-proj-..."

# ============================================
# CORS Configuration
# ============================================
allowed_origins = "https://copy-that.com,https://www.copy-that.com"

# ============================================
# Logging
# ============================================
log_level = "info"

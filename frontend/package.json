{
  "name": "copy-that-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest 'src/**/__tests__/hooks*.test.ts' --run",
    "test:integration": "vitest 'src/**/__tests__/*.integration.test.ts' --run",
    "test:components": "vitest 'src/**/__tests__/components*.test.ts' --run",
    "test:split": "npm run test:unit && npm run test:components && npm run test:integration",
    "test:hook-fix": "vitest 'src/components/overview-narrative/__tests__/hooks-tier1.test.ts' --run"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "axios": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^4.1.13",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^8.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^27.2.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}

{
  "name": "copy-that",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:store": "vitest --run src/store",
    "test:config": "vitest --run src/config",
    "test:components": "vitest --run src/components/__tests__",
    "test:fast": "vitest --run src/store src/config",
    "test:all": "vitest --run",
    "test:split": "vitest --run src/store && vitest --run src/config && vitest --run src/components/__tests__ && vitest --run src/api/__tests__ && vitest --run src/components/color-science/__tests__ && vitest --run src/components/image-uploader/__tests__ && vitest --run src/components/spacing-showcase/__tests__",
    "test:split-phase1": "vitest --run src/store && vitest --run src/config",
    "test:split-phase2": "vitest --run src/components/__tests__",
    "test:split-phase3": "vitest --run src/api/__tests__ && vitest --run src/components/color-science/__tests__",
    "test:split-phase4": "vitest --run src/components/image-uploader/__tests__ && vitest --run src/components/spacing-showcase/__tests__",
    "test:unit": "vitest --run src/store src/config",
    "test:ci": "vitest --run --testPathIgnorePatterns=integration --reporter=basic",
    "test:integration": "vitest --run src/components/__tests__",
    "diagram:mermaid": "mmdc -i",
    "diagram:d2": "d2 --layout elk --theme=100",
    "diagram:dot": "dot -Tsvg",
    "optimize:svg": "svgo",
    "docs:diagrams": "find docs/testing -name '*.mmd' -exec mmdc -i {} -o {}.svg \\; && find docs/testing -name '*.d2' -exec d2 --layout elk {} {}.svg \\;",
    "docs:optimize": "find docs/testing -name '*.svg' -exec svgo {} \\;"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.10",
    "axios": "^1.6.0",
    "lucide-react": "^0.556.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/ui": "^1.0.4",
    "eslint": "^9.16.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^15.13.0",
    "jsdom": "^27.2.0",
    "svgo-cli": "^2.8.0",
    "typescript": "^5.3.0",
    "vite": "^7.2.4",
    "vitest": "^1.0.4"
  }
}
